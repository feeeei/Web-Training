<link rel="stylesheet" href="../assets/account.css">
<div class="user-panel">
  <img class="logo" src="../assets/logo-lg.png" width="84">
  <div class="panel account-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.label :电子邮件地址 %><br/>
        <%= f.email_field :email, autofocus: true, class: 'text-input' %>
        <%= f.label :密码 %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "忘记密码?", new_password_path(resource_name), class: 'pull-right' %>
        <% end -%>
        <br/>
        <%= f.password_field :password, autocomplete: "off", class: 'text-input' %>

        <div class="from-group checkbox">
          <% if devise_mapping.rememberable? -%>
              <label for="user_remember_me">
                <%= f.check_box :remember_me %> 记住我
              </label>
          <% end %>
          <input type="submit" class="btn btn-primary pull-right" value="登录">
        </div>
    <% end %>
  </div>
  <span class="pull-right control">
    <%= render "devise/shared/links" %>
  </span>
</div>

